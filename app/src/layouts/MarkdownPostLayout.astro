---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
  <p class="text-gray-500 text-right text-sm md:text-base mt-4 md:mt-0">{new Date(frontmatter.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>

  {frontmatter.image && (
    <img src={frontmatter.image.url} class="w-full max-w-xs md:max-w-sm mt-4" alt={frontmatter.image.alt} />
  )}

  {frontmatter.tags && frontmatter.tags.length > 0 && (
    <div class="flex flex-wrap gap-2 mt-4">
      {frontmatter.tags.map((tag: string) => (
        <span class="border border-dotted border-gray-400 rounded-lg px-3 py-1 md:px-4 md:py-2 text-sm md:text-lg bg-gray-100"><a href={`/tags/${tag}`}>{tag}</a></span>
      ))}
    </div>
  )}

  <div class="mt-8 md:mt-12 space-y-4 md:space-y-6">
    <slot />
  </div>
</BaseLayout>
