---
interface Props {
    title: string;
    url: string;
    pubDate: Date;
}
const { title, url, pubDate } = Astro.props;

const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---

<li class="flex flex-col sm:flex-row sm:items-center sm:justify-between py-3 sm:py-2 gap-1 sm:gap-0">
    <a href={url} class="text-white font-bold hover:text-green-400 no-underline">{title}</a>
    <span class="text-gray-400 text-sm sm:ml-4">{formattedDate}</span>
</li>
